generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id
    email     String    @unique
    createdAt DateTime  @default(now())
    Profile   Profile   @relation(fields: [profileId], references: [id])
    profileId String    @unique
    Wedding   Wedding[]
}

model Profile {
    id       String  @id @default(uuid())
    fullName String?
    picture  String?
    userId   String  @unique
    User     User?
}

model Wedding {
    id          String    @id @default(uuid())
    createdAt   DateTime  @default(now())
    date        DateTime?
    title       String
    description String?
    groomName   String
    brideName   String
    Event       Event[]
    Guest       Guest[]
    venueId     String?   @unique
    Venue       Venue?    @relation(fields: [venueId], references: [id])
    User        User      @relation(fields: [userId], references: [id])
    userId      String
}

model Event {
    id          String   @id @default(uuid())
    name        String
    date        DateTime
    description String?
    Media       Media[]
    Wedding     Wedding? @relation(fields: [weddingId], references: [id])
    weddingId   String?
}

model Venue {
    id      String   @id @default(uuid())
    name    String
    address String
    photos  String[]
    Wedding Wedding?
}

model Guest {
    id             String     @id @default(uuid())
    guestName      String
    email          String
    additionalInfo String?
    invitationId   String     @unique
    Invitation     Invitation @relation(fields: [invitationId], references: [id])
    Wedding        Wedding?   @relation(fields: [weddingId], references: [id])
    weddingId      String?
}

model Invitation {
    id          String    @id @default(uuid())
    createdAt   DateTime  @default(now())
    guestId     String
    status      String
    sentAt      DateTime
    respondedAt DateTime?
    Guest       Guest?
}

model Media {
    id         String   @id @default(uuid())
    uploadedAt DateTime @default(now())
    fileType   String
    fileUrl    String
    eventId    String
    Event      Event    @relation(fields: [eventId], references: [id])
}
